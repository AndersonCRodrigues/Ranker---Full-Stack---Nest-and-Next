generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Poll {

  id String @id @map("_id") @default(auto()) @db.ObjectId
  pollId String @unique
  topic String
  votesPerVoter Int
  participants  Json
  adminId String
  hasStarted Boolean @default(false)
  createdAt DateTime @default(now())

  @@map("poll")
}
